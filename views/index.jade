extends layout

block content
  canvas#canvas
  script(src='/javascripts/omni-instrument.js')

  a#options-button.btn.btn-inverse.btn-small(href='#options-modal', role='button', data-toggle='modal')
    i(class='icon-info-sign')

  #options-modal.modal.hide.fade
    .modal-header
      button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
      h3 Options
    .modal-body
      p#errors.text-error
      | Frequency range
      .control-group
        label(for='from') from
        input#from.input-small(type='text', placeholder='from')
      .control-group
        label(for='to') to
        input#to.input-small(type='text', placeholder='to')
      br
      .control-group
        label(for='wave-type') Wave type
        select#wave-type
          option(value='0') Sine wave
          option(value='1') Square wave
          option(value='2') Sawtooth wave
          option(value='3') Triangle wave
      p This page was created by Maximilian Bachl in 2013 as a weekend project. You can find the code at 
        a(href="https://github.com/conchulio/omni-instrument") https://github.com/conchulio/omni-instrument
    .modal-footer
      button.btn(data-dismiss='modal', aria-hidden='true') Close

  script(src='/javascripts/omni-ui.js')
